@model EEDDMS.WebSite.Models.ManufacturerListViewModel
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_EquipmentModuleLayout.cshtml";
}
<h2>
    选择设备制造商</h2>
<table>
    <tr>
        <th>
            制造商名称
        </th>
        <th>
            备注
        </th>
        <th>
        </th>
    </tr>
    @foreach (var item in Model.Manufacturers)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Memo)
            </td>
            <td>
                @Html.ActionLink("选择", "Select", new { id = item.Id })
            </td>
        </tr>
    }
</table>
<p>
    @Html.ActionLink("返回设备信息编辑", "ContinueEdit", "EquipmentDetail")
</p>
<div class="pager">
    @Html.PageLinks(Model.PagingInfo, x => Url.Action("Index",
new { page = x }))
</div>
