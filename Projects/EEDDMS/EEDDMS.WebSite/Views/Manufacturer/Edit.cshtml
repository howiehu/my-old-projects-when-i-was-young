@model EEDDMS.Domain.Entities.Manufacturer

@{
    ViewBag.Title = "Edit";
    Layout = "~/Views/Shared/_EquipmentModuleLayout.cshtml";
}

<h2>编辑</h2>

<script src="@Url.Content("~/Scripts/jquery.validate.min.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/jquery.validate.unobtrusive.min.js")" type="text/javascript"></script>

@using (Html.BeginForm("Edit", "Manufacturer", FormMethod.Post))
{
    
    @Html.ValidationSummary(true)

    <fieldset>
        <legend>设备制造商</legend>

        @Html.HiddenFor(model => model.Id)
        @Html.HiddenFor(model => model.IsDeleted)
        @Html.HiddenFor(model => model.CreationDate)
        @Html.HiddenFor(model => model.ModifyDate)
        @Html.HiddenFor(model => model.DeleteDate)

        <div class="editor-label">
            名称
        </div>
        <div class="editor-field">
            @Html.TextBoxFor(model => model.Name)
            @Html.ValidationMessageFor(model => model.Name)
        </div>

        <div class="editor-label">
            备注
        </div>
        <div class="editor-field">
            @Html.TextAreaFor(model => model.Memo)
            @Html.ValidationMessageFor(model => model.Memo)
        </div>
        <p>
            <input type="submit" value="保存" />
        </p>
    </fieldset>
}

<div>
    @Html.ActionLink("返回设备制造商列表", "Index")
</div>
