@model EEDDMS.Domain.Entities.Collector

@{
    ViewBag.Title = "Edit";
    Layout = "~/Views/Shared/_CollectorModuleLayout.cshtml";
}

<h2>编辑</h2>

<script src="@Url.Content("~/Scripts/jquery.validate.min.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/jquery.validate.unobtrusive.min.js")" type="text/javascript"></script>

@using (Html.BeginForm("Edit", "Collector", FormMethod.Post))
{
    @Html.ValidationSummary(true)

    @Html.HiddenFor(model => model.Id)
    @Html.HiddenFor(model => model.EquipmentId)
    @Html.HiddenFor(model => model.IsDeleted)
    @Html.HiddenFor(model => model.CreationDate)
    @Html.HiddenFor(model => model.ModifyDate)
    @Html.HiddenFor(model => model.DeleteDate)

    <fieldset>
        <legend>绑定设备</legend>
        <div class="editor-field">
            @Html.DisplayFor(model => model.Equipment.EquipmentNo)
            @Html.ActionLink("绑定设备", "Index", "SelectEquipment")
            @Html.ActionLink("解除绑定设备", "RemoveEquipment")
        </div>
    </fieldset>
    
    <fieldset>
        <legend>采集器</legend>

        <div class="editor-label">
            @Html.LabelFor(model => model.CollectorNo)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.CollectorNo)
            @Html.ValidationMessageFor(model => model.CollectorNo)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.ProductionDate)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.ProductionDate)
            @Html.ValidationMessageFor(model => model.ProductionDate)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.StartToUseDate)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.StartToUseDate)
            @Html.ValidationMessageFor(model => model.StartToUseDate)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.State)
        </div>
        <div class="editor-field">
            @Html.DropDownListFor(model => model.State, new SelectListItem[] 
            { 
                new SelectListItem { Text = "未启用", Value = "0", Selected = true},
                new SelectListItem { Text = "已启用", Value = "1"},
                new SelectListItem { Text = "已报废", Value = "2"}
            })
            @Html.ValidationMessageFor(model => model.State)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.Memo)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.Memo)
            @Html.ValidationMessageFor(model => model.Memo)
        </div>

        <p>
            <input type="submit" value="保存" />
        </p>
    </fieldset>
}

<div>
    @Html.ActionLink("返回采集器列表", "Index")
</div>
