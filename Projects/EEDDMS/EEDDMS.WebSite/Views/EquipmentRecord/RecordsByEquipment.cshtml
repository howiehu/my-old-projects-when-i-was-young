@model IEnumerable<EEDDMS.Domain.Entities.EquipmentRecord>

@{
    ViewBag.Title = "RecordsByEquipment";
    Layout = "~/Views/Shared/_EquipmentModuleLayout.cshtml";
}

<h2>设备使用记录</h2>

<table>
    <tr>
        <th>
            设备编号
        </th>
        <th>
            使用类型
        </th>
        <th>
            使用单位
        </th>
        <th>
            使用地域
        </th>
        <th>
            计划使用时间
        </th>
        <th>
            开始时间
        </th>
        <th>
            结束时间
        </th>
        <th>
            备注
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Equipment.EquipmentNo)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Type)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Unit.Name)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Location.Name)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.PlanToUseTime)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.StartDate)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.EndDate)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Memo)
        </td>
        <td>
            @Html.ActionLink("编辑", "Edit", new { id=item.Id }) |
            @Html.ActionLink("详情", "Details", new { id=item.Id }) |
            @Html.ActionLink("删除", "Delete", new { id=item.Id })
        </td>
    </tr>
}

</table>

<p>
    @if (Model.Count(model => model.EndDate == null) == 0)
    {
        @Html.ActionLink("增加使用记录", "Create")
    }
</p>